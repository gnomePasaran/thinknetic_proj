$ ->
  $(document).on 'click', '.edit-answer-link', (e) ->
    e.preventDefault()
    $(this).hide()
    answer_id = $(this).data('answerId')
    $('form#edit-answer-' + answer_id).show()

  $(document).on 'ajax:success', '.edit_answer_form', (data, status, xhr) ->
    $('.edit-answer-link').show()
    $('.edit_answer_form').hide()

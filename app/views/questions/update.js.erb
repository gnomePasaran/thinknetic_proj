<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').before('<%= j message %>');
  <% end %>
<% else %>
  <% publish_to "/questions/#{@question.id}/answer" do %>
    $('.question').replaceWith("<%= j render 'questions/question' %>");
  <% end %>
<% end %>

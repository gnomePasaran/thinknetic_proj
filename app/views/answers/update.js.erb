<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').before('<%= j message %>');
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('#answer-<%= @answer.id %>').replaceWith("<%= j "#{ render 'answers/answer', answer: @answer }" %>")
  <% else %>
    $('#answer-<%= @answer.id %>').replaceWith("<%= j render 'answers/answer', answer: @answer %>")
  <% end %>
<% end %>

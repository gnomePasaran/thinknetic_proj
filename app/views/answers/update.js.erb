<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').before('<%= j message %>');
  <% end %>
<% else %>
  $('.edit_answer_form').hide();
  $('.edit-answer-link').show();
  $('#answer-text-<%= @answer.id %>').replaceWith('<%= j @answer.body %>')
<% end %>
